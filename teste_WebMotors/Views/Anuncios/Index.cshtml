@model IEnumerable<teste_WebMotors.Models.AnunciosDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="pt-5">
    <p>
        <a asp-action="Create" class="btn btn-outline-dark btn-sm">Novo Anúncio</a>
    </p>
    <hr />
    <form asp-action="Index" asp-controller="Anuncios" method="post">
        <div class="row">
            <div class="col-4">
                <input class="form-control" name="txtAnuncio" placeholder="Informe um modelo..."></>
            </div>
            <div class="col-4">
            <button type="submit" class="btn btn-success">Procurar</button>

            </div>
        </div>
    </form>

    <br /> 

    <div class="border border-light rounded-lg shadow">
        <div class-"container p-5">
            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Marca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Versao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ano)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quilometragem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Observacao)
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Marca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modelo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Versao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ano)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quilometragem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacao)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-rounded-circle">
                                        <i class="fa fa-pencil-square-o" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"></i>
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm btn-rounded-circle">
                                        <i class="fa fa-tasks" data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes"></i>
                                    </a> |
                                    <a style="color:white; cursor:pointer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-rounded-circle">
                                        <i class="fa fa-times-circle" data-bs-toggle="tooltip" data-bs-placement="top" title="Remover"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    <span>Sem anúncios ainda!</span>
                </div>
            }
        </div>
    </div>
</div>



